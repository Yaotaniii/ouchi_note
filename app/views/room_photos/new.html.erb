<h1 class="page-title">写真を追加：<%= @room.room_number %></h1>

<div class="card">
  <%= form_with model: [@room, @room_photo] do |f| %>
    <% if @room_photo.errors.any? %>
      <div class="error-messages">
        <p><%= @room_photo.errors.count %>件のエラーがあります</p>
        <ul>
          <% @room_photo.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :photo_type, "種別" %>
      <%= f.select :photo_type, [["入居時", "move_in"], ["退去時", "move_out"]], {}, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :taken_on, "撮影日" %>
      <%= f.date_field :taken_on, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :image, "写真" %>
      <%= f.file_field :image, class: "form-control", accept: "image/*" %>
    </div>

    <div class="action-bar">
      <%= link_to "キャンセル", room_room_photos_path(@room), class: "btn btn-secondary" %>
      <%= f.submit "登録", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>