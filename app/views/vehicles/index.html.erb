<h1 class="page-title">車両管理</h1>

<div class="action-bar">
  <div>
    <%= form_with url: vehicles_path, method: :get, local: true, class: "filter-form" do %>
      <%= select_tag :vehicle_type, options_for_select([["すべて", ""], ["車", "car"], ["バイク", "motorcycle"]], params[:vehicle_type]), class: "form-control", onchange: "this.form.submit();" %>
    <% end %>
  </div>
  <div class="action-bar-right">
    <% if current_user.owner? %>
      <%= link_to "新規登録", new_vehicle_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="card">
  <p>車：<%= Vehicle.where(vehicle_type: 'car').count %>台 / バイク：<%= Vehicle.where(vehicle_type: 'motorcycle').count %>台</p>
</div>

<% if @vehicles.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>種別</th>
        <th>部屋番号</th>
        <th>入居者名</th>
        <th>車種</th>
        <th>ナンバー</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @vehicles.each do |vehicle| %>
        <tr>
          <td>
            <% if vehicle.car? %>
              <span class="badge badge-occupied">車</span>
            <% else %>
              <span class="badge badge-vacant">バイク</span>
            <% end %>
          </td>
          <td><%= vehicle.resident.room.room_number %></td>
          <td><%= vehicle.resident.name %></td>
          <td><%= vehicle.make_model %></td>
          <td><%= vehicle.plate_number %></td>
          <td class="actions">
            <% if current_user.owner? %>
              <%= link_to "編集", edit_vehicle_path(vehicle), class: "btn btn-secondary btn-small" %>
              <%= button_to "削除", vehicle_path(vehicle), method: :delete, class: "btn btn-danger btn-small", form_class: "btn-delete-form", data: { turbo_confirm: "本当に削除しますか？" } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="card">
    <p>車両の登録はありません</p>
  </div>
<% end %>