<%= form_with model: user do |f| %>
  <% if user.errors.any? %>
    <div class="error-messages">
      <p><%= user.errors.count %>件のエラーがあります</p>
      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password, class: "form-control" %>
    <% if user.persisted? %>
      <p class="form-hint">※変更しない場合は空欄のままにしてください</p>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "パスワード（確認）" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :role, "権限" %>
    <%= f.select :role, [["オーナー", "owner"], ["スタッフ", "staff"]], {}, class: "form-control" %>
  </div>

  <div class="action-bar">
    <%= link_to "キャンセル", users_path, class: "btn btn-secondary" %>
    <%= f.submit class: "btn btn-primary", data: { turbo_confirm: "この内容で保存しますか？" } %>
  </div>
<% end %>