<%= form_with model: room do |f| %>
  <% if room.errors.any? %>
    <div class="error-messages">
      <p><%= room.errors.count %>件のエラーがあります</p>
      <ul>
        <% room.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :room_number, "部屋番号" %>
    <%= f.text_field :room_number, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :floor_plan, "間取り" %>
    <%= f.text_field :floor_plan, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :rent, "家賃" %>
    <%= f.number_field :rent, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :management_fee, "共益費" %>
    <%= f.number_field :management_fee, class: "form-control", min: 0 %>
  </div>

  <div class="form-group">
    <%= f.label :status, "状態" %>
    <%= f.select :status, [["空室", "vacant"], ["入居中", "occupied"]], {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :notes, "備考" %>
    <%= f.text_area :notes, class: "form-control" %>
  </div>

  <div class="action-bar">
    <%= link_to "キャンセル", rooms_path, class: "btn btn-secondary" %>
    <%= f.submit class: "btn btn-primary", data: { turbo_confirm: "この内容で保存しますか？" } %>

  </div>
<% end %>