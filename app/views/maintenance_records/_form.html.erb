<%= form_with model: maintenance_record do |f| %>
  <% if maintenance_record.errors.any? %>
    <div class="error-messages">
      <p><%= maintenance_record.errors.count %>件のエラーがあります</p>
      <ul>
        <% maintenance_record.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :room_id, "部屋" %>
    <%= f.collection_select :room_id, Room.order(:room_number), :id, :room_number, { prompt: "選択してください" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :performed_on, "実施日" %>
    <%= f.date_field :performed_on, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :cost, "費用" %>
    <%= f.number_field :cost, class: "form-control", min: 0 %>
  </div>

  <div class="form-group">
    <%= f.label :description, "詳細" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="action-bar">
    <%= link_to "キャンセル", maintenance_records_path, class: "btn btn-secondary" %>
    <%= f.submit class: "btn btn-primary", data: { turbo_confirm: "この内容で保存しますか？" } %>
  </div>
<% end %>