<h1 class="page-title">同居人を追加：<%= @resident.name %>さん</h1>

<div class="card">
  <%= form_with model: [@resident, @occupant] do |f| %>
    <% if @occupant.errors.any? %>
      <div class="error-messages">
        <p><%= @occupant.errors.count %>件のエラーがあります</p>
        <ul>
          <% @occupant.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, "氏名" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :name_furigana, "ふりがな" %>
      <%= f.text_field :name_furigana, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :relation, "続柄" %>
      <%= f.text_field :relation, class: "form-control", placeholder: "例：妻、子、母" %>
    </div>

    <div class="action-bar">
      <%= link_to "キャンセル", resident_path(@resident), class: "btn btn-secondary" %>
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>